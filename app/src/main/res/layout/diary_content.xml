<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="24dp"
    android:paddingTop="8dp"
    android:paddingBottom="16dp"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/addStickerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/add_sticker_button_background"
        android:elevation="1dp"
        android:src="@drawable/add_sticker" />

    <LinearLayout
        android:id="@+id/stickersContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:alpha="0.4"
        android:textSize="14sp"
        android:textAppearance="@style/TextAppearance.GBDiary"
        tools:text="2022.10.05 수요일" />

    <EditText
        android:id="@+id/contentTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:hint="오늘 하루를 기록해보세요"
        android:textAppearance="@style/TextAppearance.GBDiary" />

    <LinearLayout
        android:id="@+id/imagesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:dividerPadding="16dp" />

</LinearLayout>
